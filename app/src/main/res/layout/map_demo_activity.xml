<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@android:color/white"
		android:layout_weight="0.20"
		 >

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/white"
			android:minHeight="?attr/actionBarSize"
			android:theme="?attr/actionBarTheme" />

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="60dp">


			<ImageView
				android:id="@+id/imageView2"
				android:layout_width="200dp"
				android:layout_height="50dp"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:layout_centerHorizontal="true"
				android:layout_gravity="center"
				android:background="@android:color/white"
				android:contentDescription="@string/app_name"
				android:src="@drawable/uviclogonew" />


		</RelativeLayout>


	</FrameLayout>

	<fragment
		android:id="@+id/map"
		class="com.google.android.gms.maps.SupportMapFragment"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.20"/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="3dp"
		android:orientation="horizontal"
		>


		<Space
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<ToggleButton
			android:id="@+id/locate"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@null"
			android:button="@drawable/desttoggle"
			android:onClick="toggleclick"
			android:textOff=""
			android:textOn="" />

		<Space
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<ToggleButton
			android:id="@+id/bikelock"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@null"
			android:button="@drawable/bikelocktoggle"
			android:onClick="toggleclick"
			android:textOff=""
			android:textOn="" />

		<Space
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />


		<ToggleButton
			android:id="@+id/kmtracker"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@null"
			android:button="@drawable/kmtoggle"
			android:onClick="toggleclick"
			android:textOff=""
			android:textOn="" />

		<Space
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<ToggleButton
			android:id="@+id/shower"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@null"
			android:button="@drawable/showertoggle"
			android:onClick="toggleclick"
			android:textOff=""
			android:textOn="" />

		<Space
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />

		<ToggleButton
			android:id="@+id/poptimes"
			style="?android:attr/borderlessButtonStyle"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:background="@null"
			android:button="@drawable/poptimestoggle"
			android:onClick="toggleclick"
			android:textOff=""
			android:textOn="" />

		<Space
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />


	</LinearLayout>


</LinearLayout>



